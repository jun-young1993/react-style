{
    "compilerOptions": {
      "target": "ES5",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "declaration": true,
      "esModuleInterop": true,
      "inlineSourceMap": false,
      "listEmittedFiles": false,
      "listFiles": false,
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "pretty": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "skipLibCheck": true,
      "strict": true,
      "traceResolution": false,
      "jsx": "react-jsx",
    },
    "compileOnSave": false,
    "exclude": ["node_modules", "dist","**/*.stories","**/stories", "**/*.test.ts"],
    "include": ["src"]
  }